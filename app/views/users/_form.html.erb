<%= form_for(@user) do |f| %>
  <fieldset>
    <legend>Personal details</legend>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>We found <%= pluralize(@user.errors.count, "problem") %> with your information:</h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

    <div class="row">
      <div class="small-12 large-6 columns">
        <div class="row">
          <div class="small-3 columns">
            <%= f.label :first_name, class: "right inline" %><br>
          </div>
          <div class="small-9 columns">
            <%= f.text_field :first_name %>
          </div>
        </div>

        <div class="row">
          <div class="small-3 columns">
            <%= f.label :last_name, class: "right inline"  %><br>
          </div>
          <div class="small-9 columns">
            <%= f.text_field :last_name %>
          </div>
        </div>

        <div class="row">
          <div class="small-3 columns">
            <%= f.label :email, class: "right inline"  %><br>
          </div>
          <div class="small-9 columns">
            <%= f.email_field :email %>
          </div>
        </div>
      </div>

      <div class="small-12 large-6 columns">
        <div class="row">
          <div class="small-3 columns">
            <%= f.label :password, class: "right inline" %><br>
          </div>
          <div class="small-9 columns">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="row">
          <div class="small-3 columns">
            <%= f.label :password_confirmation, class: "right inline" %><br>
          </div>
          <div class="small-9 columns">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="row">
          <div class="actions small-12 columns">
            <%= f.submit class: "button tiny right" %>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>
