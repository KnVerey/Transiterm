<tr class="term-record">
	<% lang_columns(term_record).each do |title| %>
		<td class="term"><%= render_markdown(term_record.send(title.downcase)) %></td>
	<% end %>
	<td class="mandatory-field hide-for-small"><%= render_markdown(term_record.source.name) %></td>
	<td class="mandatory-field hide-for-small"><%= render_markdown(term_record.domain.name) %></td>
	<td class="right">
		<i class="fa fa-plus-square-o fa-lg hide-for-print" data-toggler></i>
		<i class="fa fa-minus-square-o fa-lg hide hide-for-print" data-toggler></i>
	</td>
</tr>

<tr class="record-expand hide">
	<td colspan="<%= lang_columns(term_record).length + 3 %>" class="expanded-cell">
		<span class="mandatory-field show-for-small-only">
			<strong>Source</strong>: <%= render_markdown(term_record.source.name) %><br>
			<strong>Domain</strong>: <%= render_markdown(term_record.domain.name) %>
		</span>
		<% if term_record.context.present? %>
			<span class="optional-field"><strong>Context</strong>: <%= render_markdown(term_record.context) %></span><br>
		<% end %>

		<% if term_record.comment.present? %>
			<span class="optional-field"><strong>Comment</strong>: <%= render_markdown(term_record.comment) %></span><br>
		<% end %>
			<small class="left">Collection: <%= term_record.collection.title %>&nbsp | Record created: <%= term_record.created_at %>&nbsp |
			Record last updated: <%= term_record.updated_at %></small>
			<%= link_to "Edit record", edit_term_record_path(term_record.id), class: "button edit-button right tiny no-margin secondary hide-for-print" %>
	</td>
</tr>