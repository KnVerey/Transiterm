<div class="row full-width anchor">
	<div class="small-8 columns">
		<h1><%= @collection.title %></h1>
		<p><%= @collection.description %><br>
		<%= link_to "Edit collection details", edit_user_collection_path(@user, @collection) %></p>
	</div>
	<div class="small-3 columns add-button-column">
		<%= link_to "Add record", new_user_collection_term_record_path(@user, @collection), class: "button", id: "add-button" %>
	</div>
</div>

<div class="row full-width records-container">
	<div class="small-12 columns">
		<div class="row full-width header-row">
			<% columns = lang_columns %>
			<% columns[:titles].each do |title| %>
				<div class="small-<%= columns[:width] %> columns"><%= title %></div>
			<% end %>
			<div class="small-2 columns">Source</div>
			<div class="small-2 columns">Domain</div>
			<div class="small-1 column"></div>
		</div>

		<%= render @collection.term_records %>
	</div>
</div>